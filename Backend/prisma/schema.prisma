generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  password String
  name     String
  role     UserRole @default(USER)

  ownedProjects Project[]
  providedUsers ProjectUser[] @relation("UserProvidedProjectUsers")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Project {
  id          String        @id @default(uuid())
  ownerId     String
  name        String
  description String?
  status      ProjectStatus @default(ACTIVE)

  owner   User          @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  members ProjectUser[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ProjectApiKey {
  id             String        @id @default(uuid())
  projectId      String

  apiKey         String        @unique
  secretKeyHash  String

  environment    ApiEnvironment
  isActive       Boolean       @default(true)

  project        Project       @relation(fields: [projectId], references: [id], onDelete: Cascade)

  createdAt      DateTime      @default(now())
}

model ProjectJwtKey {
  id                   String   @id @default(uuid())
  projectId            String

  kid                  String   @unique
  publicKey            String
  privateKeyEncrypted  String

  algorithm            JwtAlgorithm @default(RS256)
  isActive             Boolean   @default(true)

  project              Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)

  createdAt            DateTime  @default(now())
}


model ProjectUser {
  id         String @id @default(uuid())
  projectId  String
  providerId String

  name         String
  email        String
  password     String
  role         ProjectRole
  tokenVersion Int         @default(0)
  isVerified   Boolean     @default(false)

  project  Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  provider User    @relation("UserProvidedProjectUsers", fields: [providerId], references: [id])

  createdAt   DateTime  @default(now())
  lastLoginAt DateTime?
}

enum ProjectRole {
  OWNER
  ADMIN
  MEMBER
}

enum ProjectStatus {
  ACTIVE
  INACTIVE
  ARCHIVED
}

enum UserRole {
  USER
  ADMIN
}

enum ApiEnvironment {
  DEVELOPMENT
  PRODUCTION
}

enum JwtAlgorithm {
  RS256
}
